.our-services-page{
    background-image: url('#{$imageurl}/continue_with.png'); min-height: 940px; background-size: cover;background-position: center center; background-repeat: no-repeat; text-align:center;
    @media(min-width:$screen-sm-min) and (max-width:$screen-md-max){
        min-height:auto;
    }
    .align{
        padding: 50px 100px; display: block; border-right: 1px solid rgba(0,0,0,0.1);border-bottom: 1px solid rgba(0,0,0,0.1); text-decoration: none;
        &:hover{
            background-color: rgba(0,0,0,0.05);
        }
        @media(min-width:$screen-sm-min) and (max-width:$screen-lg-max){
            padding: 30px 15px; min-height:300px;
        }
        @media(max-width:$screen-xs-max){
            padding:15px; border:none; 
        }
        &:nth-child(4), &:nth-child(5), &:nth-child(6){
            border-bottom: none;
        }
        &:nth-child(3), &:nth-child(6){
            border-right: 0px;

        }
    }
    .heading{
        margin:0 0 100px 0; color: $color-white;
        @media(min-width:$screen-lg-min) and (max-width:$screen-lg-max){
            margin:0 0 50px 0;
        }
        @media(max-width:$screen-xs-max){
            font-size:24px; margin-bottom:20px;
        }
    }
    h3{
        font-size: 22px; color:$color-pink; font-family: $avantgardestd-bk; position: relative;  margin-bottom: 30px;
        &:after{
            content: '';
            width: 41px; height: 3px; background-color: #c3c3c3; position: absolute; left: 0; right: 0;margin: 0 auto; bottom: -15px; 

        }
    }
    p{
        font-family: $avantgardestd-bk; font-size: 16px; color:$color-black; letter-spacing: 0.3px;
    }
}


