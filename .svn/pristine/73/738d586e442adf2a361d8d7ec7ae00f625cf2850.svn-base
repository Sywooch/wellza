 .my-view-profile{
    background-color:#fff;
    padding:25px 50px;
    & > .row{
      margin: 0 -23px;
    }
    .list-box{
      .img-box{ position: relative; height: 171px; width: 171px;margin: 0 auto; border:4px solid $color-green;border-radius: 50%;
        .provider-image{height: 100%; width: 100%; border-radius: 50%; border:5px solid $color-white;
          img{
            height:100%; width: 100%; margin:0 auto;
          }  
        }
      }
    }

    .edit-profile{
      float: right; background:$color-orange; display: inline-block;padding:10px; text-decoration: none; border-radius:50%;
      &:hover{
        background: lighten($color-orange, 5%);
      }
    }
    .mar-top{
      margin-top: 27px;
    }
   .profile-details{
      font-family: $avantgardestd-bk;
      .detail{
        //border-bottom: 1px solid #D6D6D6;
        padding-top: 40px; color: #A1A1A1; font-size: 18px;
        @media(max-width:$screen-xs-max){
          font-size: 16px;
        }
        @media(min-width:$screen-sm-min) and (max-width:$screen-md-max){
          font-size: 16px;
        }
        .form-group{
          display: inline-block;  padding-left: 15px; margin-bottom: 5px;
        }
        span{
          font-size: 20px;
          color: $color-666;
          @media(max-width:$screen-xs-max){
          font-size: 16px;
           }
           @media(min-width:$screen-sm-min) and (max-width:$screen-md-max){
          font-size: 16px;
        }
        }
      }
   }
  }

.sp-edit-customerdetail-modal{
    .customer-image{
        width:200px; height:200px; position: relative; margin: 0 auto; border: 3px solid $color-green; padding: 5px; border-radius:50%; margin-bottom:25px;
        .edit-btn{position: absolute; top: 15px; right:3px;height: 40px; width: 40px; border-radius: 50%; line-height: 40px; display: block;background-color: #F9AE39;
            &:hover{ background-color: #ffbe49;}
        }
    }  
}
