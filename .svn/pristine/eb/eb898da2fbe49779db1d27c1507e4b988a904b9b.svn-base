.serviceprovider-product-purchased-section{
    .table>thead>tr>th{
        border-bottom: 0;
    }
    .date-search{
        width: 500px;  margin-top:30px;
        @media(max-width:499px){
            width: 100%;
        }

        .input-group{
            width: 250px; float: left;

            @media(max-width:499px){
                width: 100%;
            }

            .input-group-addon{
                border-radius: 0;  padding:8px 12px; background:#F0F0F0; border:1px solid #EFEFEF;
            }

            input{
                height: 45px; border-radius:0;border:1px solid #EFEFEF;
            }
        }
    }

    .table{
        margin-bottom: 0; border:0;
        td{
            border:0;
        }
    } 

    .inner-heading{

        padding:30px 0;
        
    } 

    .product-purchased-table-bg{
        background:#F8F8F8; border-top:1px solid #EEEEEE;

    }

    .product-purchased-table-trans{
        background:transparent;
    }

    .product-purchased-table{
        background:#fff; box-shadow:0px 0px 15px #d6d6d6; margin-bottom: 30px;

        .pad0{padding:0;}

        .table{
            @media(max-width:$screen-lg-max){
                width: 1400px;
            }
            
        }

        th{
            &:nth-child(1){
                div{
                    background:url(../images/product-purchased-icon.png); background-repeat:no-repeat; background-position: 0px 9px;
                }
             }

             &:nth-child(2){
                div{
                    background:url(../images/product-purchased-icon.png); background-repeat:no-repeat; background-position: -175px 12px;
                }
             }

             &:nth-child(3){
                div{
                    background:url(../images/product-purchased-icon.png); background-repeat:no-repeat; background-position: -370px 12px;
                }
             }
             &:nth-child(4){
                div{
                    background:url(../images/product-purchased-icon.png); background-repeat:no-repeat; background-position: -545px 9px;
                }
             }
        }

        .product-purchased-td-user{
            padding-left:60px;

            .shadow{
                border-radius:50%;  background:#fff;box-shadow: 3px 0px 5px #dedede; width: 135px; height: 135px;display: inline-block;float: left;
                @media(max-width:$screen-xs-max){
                    width: 100px; height: 100px;
                }
                img{
                    border-radius:50%;
                    @media(max-width:$screen-xs-max){
                        width: 100px;
                    }
                }
            }

        }

        th{
            &:first-child{
                padding-left:60px;
            }
            div{
                color: $color-666;font-family:$avantgarde-md; font-size: 20px;font-weight: normal;padding: 15px 36px;position: relative; display: inline-block;
                img{
                    position: absolute;bottom:25px;left: 0px;
                }
            }
        }

        .product-purchased-td div{
            color: $color-666; font-family:$avantgardestd-bk;font-size: 16px; padding: 10px 0;display: block;
            @media(max-width:$screen-xs-max){
                font-size: 13px; padding:5px 0;
            }
        }

        .product-purchased-detail{
            padding: 18px 0px 0px 20px;display: inline-block;

            @media(max-width:$screen-xs-max){
                padding: 8px 0px 0px 20px;
            }

            p{
                &:nth-child(1){
                    color: $color-pink;font-family: $avantgarde-md;font-size: 26px;
                    @media(max-width:$screen-xs-max){
                        font-size: 20px;
                    }
                }

                &:nth-child(2){
                    color: $color-666; font-family:$avantgardestd-bk; font-size: 16px;
                    @media(max-width:$screen-xs-max){
                        font-size: 13px;
                    }
                }
            }

            span{
                color: $color-666;font-family:$avantgardestd-bk; font-size: 17px;
                @media(max-width:$screen-xs-max){
                    font-size: 15px;
                    background-size: 25px;
                }
            }
        } 
    }

    .product-purchased-table{
        .table{
            @media(max-width:$screen-xs-max){
                width: 1200px !important;
            }
            .sales-total-table{
                border-top: 1px solid #EEEEEE;
                td:first-child{
                    padding-left:60px;
                    a:first-child{
                        background:$color-green; padding: 14px 30px;display: inline-block;text-decoration: none;color:#fff;
                        &:hover{
                            background: lighten($color-green, 5%);
                        }
                    }
                    .support{
                        background:url(../images/product-purchased-support.png) $color-orange; background-repeat:no-repeat; background-position: center center; padding: 14px 24px;display: inline-block;text-decoration:none;
                        &:hover{
                            background:url(../images/product-purchased-support.png) lighten($color-orange, 5%);background-repeat:no-repeat; background-position: center center;
                        }
                    }
                }
                .sales-total-comm{
                    //padding-left:60px;
                    padding-top: 13px;
                    div{
                        color:#9F9F9F;font-size: 20px; font-family:$avantgardestd-bk;
                        @media(max-width:$screen-xs-max){
                            font-size: 18px;
                        }
                    }
                    span{
                        color: $color-green; font-size: 20px; font-family: $avantgarde-md;
                        @media(max-width:$screen-xs-max){
                            font-size: 20px;
                        }
                    }
                } 

                .sales-total-td{
                    //padding-right:93px;

                    div{
                        color:  $color-666; font-size: 29px;font-family:$avantgardestd-bk;
                        @media(max-width:$screen-xs-max){
                            font-size: 22px;
                        }
                    }

                    span{
                        color: $color-green; font-size: 29px; font-family: $avantgarde-md;
                        @media(max-width:$screen-xs-max){
                            font-size: 22px;
                        }
                    }
                }
            }
        }
    }

}
