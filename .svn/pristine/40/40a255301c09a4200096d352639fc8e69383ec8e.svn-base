.my-refferal-section{
    .inner-heading{
        text-align: left; font-size: 25px; padding: 30px 8px;
       
    } 
    .btn-bottom{
        margin: 0 0 40px !important;
    }

        .my-favorite-list{
            .col-lg-3{
                @media(min-width:$screen-lg-max){
                    width: 20%;   
                }
              
            }

            .resize-box{
                @media(max-width:480px){
                  width: 100% !important; 
                }
                @media(max-width:$screen-xs-max){
                  width: 50%; float: left;
                }
              }
            .list-box{position: relative; margin: 0 8px 50px;text-align: center; padding: 30px 15px; background-color: $color-white;box-shadow: 0 0 3px -1px rgba(0, 0, 0, 0.2);
                     
                      .img-box{ position: relative; height: 153px; width: 153px;margin: 0 auto; border:4px solid $color-green;border-radius: 50%;
                                .provider-image{height: 100%; width: 100%; border-radius: 50%; border:5px solid $color-white;
                                                img{
                                                    height:100%; width: 100%; margin:0 auto;
                                                }  
                                }
                                &.check{
                                    border-color:#F2C24C; 
                                }


                      }
                      .provider-info{ margin: 10px 0;
                                      .provider-name{
                                          font-size: 24px; color: #333; margin-top: 15px;
                                          @media(max-width:$screen-sm-max){
                                            font-size: 22px;
                                          }
                                      }
                                      .address{ font-size: 17px; color: #A1A1A1;
                                        @media(max-width:$screen-sm-max){
                                            font-size: 15px;
                                          }
                                      }
                                  
                                    
                      }
            }
        }



}
