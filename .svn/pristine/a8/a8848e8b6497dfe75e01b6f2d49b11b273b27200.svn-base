.nav-side-menu {
  transition: width 0.3s ease-in; overflow: auto;  font-size: 12px;  font-weight: 200;  background-color:#52BFB8;  position: fixed;  top: 80px;  width: 250px;  height: 100%;
  color: #FFFFFF;
  @media(max-width:$screen-xs-max){
      left:-230px;
  }
  .toggle-btn {  display: none;}

ul, li {  list-style: none;  padding: 0px;  margin: 0px;  line-height: 35px;  cursor: pointer; }

ul .active, li .active {  border-left: 3px solid #57b1aa;  background-color: #43B6AD;}
ul .sub-menu li.active, li .sub-menu li.active { 
    color: #fff;
    a{
       color: #fff;  
    }
}
ul .sub-menu li{
    position: relative;
}
.sub-menu li:before, .sub-menu li:before {
  font-family: FontAwesome;  content: "\f105";  display: inline-block;  padding-left: 10px;  padding-right: 10px;  vertical-align: middle; position: absolute; top: 9px;
}
.sub-menu li a{
    padding-left: 25px; position: relative;
}
.menu-content{
    padding-bottom: 80px !important;
}
}

.nav-side-menu ul :not(collapsed) .arrow:before,
.nav-side-menu li :not(collapsed) .arrow:before {
  font-family: FontAwesome;  content: "\f078";  display: inline-block;  padding-left: 10px;  padding-right: 10px;  vertical-align: middle;  float: right;
}

.nav-side-menu ul .sub-menu li, .nav-side-menu li .sub-menu li {line-height: 28px;  border-bottom: 1px solid #5ab4ad;  margin-left: 0px; background-color: #39A69F;
  font-family: $avantgardestd-bk;  font-size: 16px;
}
.nav-side-menu ul .sub-menu li:hover, .nav-side-menu li .sub-menu li:hover {  background-color: #43B6AD;
}


.nav-side-menu li {
  padding-left: 0px;  border-left: 3px solid $color-green;  border-bottom: 1px solid #57b1aa;  
}
.nav-side-menu li.active {  border-left: 3px solid #F9AE39;
}
.nav-side-menu li a {  text-decoration: none;  color: #ffffff;  font-size: 16px;  font-family: $avantgardestd-bk;  letter-spacing: 0.4px;
  padding: 10px 0px;  display:block;
}
.nav-side-menu li a i {  padding-left: 10px;  width: 20px;  padding-right:30px;}
.nav-side-menu li:hover {  border-left: 3px solid #F9AE39;  background-color: #43B6AD;  -webkit-transition: all 1s ease;  -moz-transition: all 1s ease;  -o-transition: all 1s ease;  -ms-transition: all 1s ease;  transition: all 1s ease;}

