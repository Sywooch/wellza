.login-admin{display: table;height: 100%;left: 0;margin: 0;padding: 0; position: absolute;top: 0;width: 100%; font-family:$avantgarde-md;
             .table-cell{display: table-cell;margin: 0;padding: 0;vertical-align: middle;
                         .outer-panel .inner-panel .panel{border-color:#F9AE39;margin-bottom:0px;}
                         .panel-heading{ background-color:#F9AE39;border-color:#F9AE39;} 
                         .panel-title{font-size:24px; }
                         .panel-body .form-group .form-control{ border-radius:0px;}
             }
}

.admin-login-page{ 
     @media(max-width:$screen-xs-max){
     padding-top:15px !important;
     }
    .inner-heading{
        text-align: center; padding: 30px 0 10px;
    }
    .login-section{ box-shadow: 0px 0px 7px 0px rgba(0, 0, 0, 0.1); background-color: $color-white; letter-spacing: 0.3px; padding: 50px 50px; margin:50px 0px 0;
                    @media(max-width:$screen-xs-max){margin:15px;}
                    @media(min-width:$screen-md-min) and (max-width:$screen-lg-max){
                        margin: 40px 40px;  
                    }
                    .help-block-error{ position: absolute;font-size: 14px;}
                    .inner-heading{ text-align: center;}
               
                            .top-btn{ margin-bottom:50px;
                                      @media(max-width:$screen-xs-max){margin-bottom:15px;}
                                      li.active{
                                          a{
                                              color: $color-green;
                                          }
                                      }
                                      li{
                                          a{
                                              font-size: 20px; font-family: $avantgarde-md; color:#A1A1A1; text-transform: uppercase; text-decoration: none; padding: 0px 5px; position: relative;
                                              &:after{
                                                  width: 1px; content: ''; position: absolute; right: -9px; top: 3px; height: 19px; background-color: #D6D6D6; 
                                              }

                                              &:hover{
                                                  color: $color-green;
                                              }
                                          }
                                          &:first-child{
                                              a{
                                                  padding-left: 0px;
                                              }
                                          }
                                          &:last-child{
                                              a{
                                                  &:after{ background-color: transparent;}      
                                              } 
                                          }
                                      }
                            }
                            .forgot-password{
                                a{
                                    font-size: 14px; color: #666666; float: right;font-family: $avantgarde-md; 
                                }
                            }
                            .form-group{ margin-bottom: 35px;
                                         .form-control{
                                             border:none; border-bottom: 1px solid #D8D7DD; box-shadow: none; border-radius: 0px; height: 45px; font-size: 18px; color: #A2A2A2;font-family: $avantgarde-md; padding-left: 0px;
                                             background-image: url('../images/login-icon.png'); background-repeat: no-repeat; background-position: right; padding-right: 45px;
                                         }
                                         .password{
                                             background-position: right -116px;
                                         }
                            }
                            .bottom-section{
                                margin-top: 20px; margin-bottom:0px;
                                @media(max-width:480px){
                                    margin-top: 0px; 
                                }
                            }
                            .btn{
                                padding: 10px 25px; font-size: 16px;font-family: $avantgarde-md; margin-top: 30px;
                                @media(max-width:$screen-xs-max){
                                    font-size:16px; 
                                }
                            }
                   
    } 
}




