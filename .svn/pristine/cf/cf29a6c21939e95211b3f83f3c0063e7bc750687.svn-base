.wellza-memebership-popup{
  .modal-header{
    border: 0 !important;
  }
  .modal-body{
     background-color:$color-green;  padding:0 15px 0 15px !important;  position:relative !important;
    .close{
      @extend %cross;
    }
    .membership-left{
      img{
        display: block; margin:0 auto;padding:200px 0;
        @media (max-width:$screen-xs-max){
          padding:25px 0;width:100px;
        }
        @media (min-width: $screen-sm-min) and (max-width: $screen-md-max){
          padding:50px 0;
        }
      }
    }

    .membership-right{
      background-color:$color-white;text-align:center;padding-top:25px;
      .membership-info{
          .heading{
            h2{
              color: $color-green;font:35px $avantgarde-md;
              @media (max-width:480px){
                font-size: 24px;
              }
            }
            p{
              color: $color-666; font:16px  $avantgarde-md;
            }
          }

          .price-box{ 
              border:2px solid #DDDDDD;position:relative;display:inline-block;padding:10px 30px; @include border-radius(10); margin: 30px auto; 
              &:before{
                content: ''; position: absolute; display: block; background:url('#{$imageurl}/membership-bow.png');top:-14px; z-index: 1; width:38px; height:31px; left:0; right:0; margin-left:auto; margin-right:auto;background-color:#fff; background-repeat:no-repeat;background-position:center center;padding:0 30px;
              }
            h2{
              color: $color-pink; font:70px  $avantgarde-md;margin-bottom:0;
              @media (max-width:$screen-xs-max){
               font-size:40px;
              }
              @media (min-width: $screen-sm-min) and (max-width: $screen-md-max){
                font-size:50px;
              }
            }
            p{
              color: $color-666; font:24px  $avantgarde-md;
               @media (max-width:480px){
                font-size: 18px;
              }
            }
          }

          .bottom{
             h2{
              color: $color-orange; font:40px $mission-script;
                @media (max-width:480px){
                  font-size: 30px;
                }
            }
            p{
              color: $color-666; font:18px $avantgardestd-bk;
            }
          }
       }

      .membership-info-next{
          display: none;
          .price-box{ 
              border:2px solid #DDDDDD;position:relative;display:inline-block;padding:36px; @include border-radius(10); margin: 35px; 
              &:before{
                content: ''; position: absolute; display: block; background:url('#{$imageurl}/membership-bow.png');top:-14px; z-index: 1; width:38px; height:31px; left:0; right:0; margin-left:auto; margin-right:auto;background-color:#fff; background-repeat:no-repeat;background-position:center center;padding:0 30px;
              }
            }
            .heading{
              h2{
                color: $color-green;font:35px $avantgarde-md;
              }
             }

            p{
              color: #A1A1A1; font:17px  $avantgardestd-bk; 
            }
        }
      .bottom-btn{
            a{
            text-decoration: none; padding:15px 35px; display:inline-block;margin-bottom:25px;margin-top:15px;
             @media (max-width:480px){
                 padding:15px;
              }
        }
        .btn-disable{
          background:#A2A2A2 !important; border:1px solid #A2A2A2 !important;
        }
      }
    }

  }
  
} 