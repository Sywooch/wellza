.location-section{ margin-bottom: 40px;
                   .inner-heading{
                       text-align: center; padding: 30px 0 30px;
                       @media(max-width:$screen-md-max){
                           padding: 10px 0 20px;
                       }
                   }
                   label{
                       font-size: 22px; font-family: $avantgardestd-bk; color: $color-666;
                       @media(max-width:$screen-md-max){
                           font-size: 16px;  
                       }
                   }
                   .pick-location{
                       .left{
                           width:45%; float: left; 
                           @media(max-width:$screen-xs-max){
                               width:100%;
                           }
                       }
                       .center{
                           width:10%;float: left;  position: relative; top: 18px; text-align: center;
                           @media(max-width:$screen-xs-max){
                               width:100%;top:-7px; 
                           }
                       }
                       .right{
                           width:45%;float: left;  
                           @media(max-width:$screen-xs-max){
                               width:100%;
                           }
                       }
                       .btn{
                           padding:15px; height: 60px;  font-size: 20px;
                           @media(max-width:$screen-md-max){
                               height: 40px; padding:8px; font-size:17px;
                           }
                       }
                   }
                   .form-group{ color: #A0A0A0; margin-bottom: 35px;
                                @media(max-width:$screen-md-max){
                                    margin-bottom: 15px;
                                }
                                .form-control{
                                    border: 2px solid #D6D6D6; box-shadow: none; font-size: 18px; border-radius: 0px;
                                    @media(max-width:$screen-md-max){
                                        font-size: 16px; border-width:1px;  
                                    }
                                }
                                input.form-control{
                                    height: 60px; 
                                    @media(max-width:$screen-md-max){
                                        height: 40px; 
                                    }
                                }

                   }
                   .btn-bottom{
                       margin-top: 0px !important; 
                   }


}